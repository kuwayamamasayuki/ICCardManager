                <DataGridTextColumn Header="Êó•ÊôÇ" Binding="{Binding UseDateDisplay}" Width="140" IsReadOnly="True"/>
                <DataGridTextColumn Header="Âå∫Èñì" Binding="{Binding RouteDisplay}" Width="*" IsReadOnly="True"/>
