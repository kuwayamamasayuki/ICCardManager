        <!-- Ë©≥Á¥∞‰∏ÄË¶ßÔºà„Ç´„Çπ„Çø„É†„É™„Çπ„Éà: ÂàÜÂâ≤Á∑ö„ÇØ„É™„ÉÉ„ÇØÂØæÂøúÔºâ -->
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- „Éò„ÉÉ„ÉÄ„ÉºË°å -->
                <Border Grid.Row="0" Background="#F5F5F5" Padding="8,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="„Ç∞„É´„Éº„Éó" FontWeight="SemiBold" FontSize="{DynamicResource SmallFontSize}"/>
                        <TextBlock Grid.Column="1" Text="Êó•ÊôÇ" FontWeight="SemiBold" FontSize="{DynamicResource SmallFontSize}"/>
                        <TextBlock Grid.Column="2" Text="Âå∫Èñì" FontWeight="SemiBold" FontSize="{DynamicResource SmallFontSize}"/>
                        <TextBlock Grid.Column="3" Text="ÈáëÈ°ç" FontWeight="SemiBold" FontSize="{DynamicResource SmallFontSize}" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="4" Text="ÊÆãÈ´ò" FontWeight="SemiBold" FontSize="{DynamicResource SmallFontSize}" HorizontalAlignment="Right"/>
