                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- Êìç‰ΩúË™¨Êòé -->
        <Border Grid.Row="3" Background="#FFFDE7" CornerRadius="4" Padding="10" Margin="0,10,0,0">
            <TextBlock TextWrapping="Wrap" FontSize="{DynamicResource SmallFontSize}">
                <Run FontWeight="Bold">Êìç‰ΩúÊñπÊ≥ï:</Run>
                <Run Text=" „ÉÅ„Çß„ÉÉ„ÇØ„Éú„ÉÉ„ÇØ„Çπ„ÅßË§áÊï∞ÈÅ∏Êäû ‚Üí [Áµ±Âêà] „Åß1„Å§„ÅÆ‰πó„ÇäÁ∂ô„Åé„Å´ / [ÂàÜÂâ≤] „ÅßÂÄãÂà•„Å´Êàª„Åô"/>
