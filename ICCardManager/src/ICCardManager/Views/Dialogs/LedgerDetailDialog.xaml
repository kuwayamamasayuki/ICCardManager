                                                        <Setter Property="Text" Value="„Ç∞„É´„Éº„Éó„Å™„ÅóÔºàËá™ÂãïÊ§úÂá∫Ôºâ"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding GroupColorIndex}" Value="1"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="„Ç∞„É´„Éº„ÉóAÔºàÈùíÔºâ"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding GroupColorIndex}" Value="2"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="„Ç∞„É´„Éº„ÉóBÔºàÁ∑ëÔºâ"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding GroupColorIndex}" Value="3"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="„Ç∞„É´„Éº„ÉóCÔºà„Ç™„É¨„É≥„Ç∏Ôºâ"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding GroupColorIndex}" Value="4"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="„Ç∞„É´„Éº„ÉóDÔºàÁ¥´Ôºâ"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding GroupColorIndex}" Value="5"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="„Ç∞„É´„Éº„ÉóEÔºàËµ§Ôºâ"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
