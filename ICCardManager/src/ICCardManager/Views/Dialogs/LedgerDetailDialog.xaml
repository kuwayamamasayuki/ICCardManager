            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Ë¶™„É¨„Ç≥„Éº„ÉâÊÉÖÂ†±„Éò„ÉÉ„ÉÄ„Éº -->
        <Border Grid.Row="0" Background="#E3F2FD" CornerRadius="4" Padding="15" Margin="0,0,0,10">
            <Grid>
