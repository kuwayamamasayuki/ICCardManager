                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding GroupColorIndex}" Value="1">
                                                <Setter Property="Background" Value="#1976D2"/>
