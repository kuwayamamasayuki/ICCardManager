                                                                    <Setter TargetName="DividerLine" Property="Visibility" Value="Visible"/>
                                                                    <Setter TargetName="DividerBorder" Property="Height" Value="12"/>
                                                                </DataTrigger>
                                                                <!-- „Éõ„Éê„ÉºÊôÇÔºàÂàÜÂâ≤Á∑ö„Å™„ÅóÔºâ -->
                                                                <MultiTrigger>
                                                                    <MultiTrigger.Conditions>
                                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                                    </MultiTrigger.Conditions>
                                                                    <Setter TargetName="HoverLine" Property="Opacity" Value="1"/>
                                                                    <Setter TargetName="DividerBorder" Property="Background" Value="#F5F5F5"/>
                                                                    <Setter TargetName="HintText" Property="Visibility" Value="Visible"/>
                                                                </MultiTrigger>
                                                                <!-- „Éõ„Éê„ÉºÊôÇÔºàÂàÜÂâ≤Á∑ö„ÅÇ„ÇäÔºâ -->
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                                        <Condition Binding="{Binding ShowDividerBelow}" Value="True"/>
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter TargetName="HintText" Property="Text" Value="„ÇØ„É™„ÉÉ„ÇØ„Åó„Å¶Áµ±Âêà"/>
                                                                    <Setter TargetName="DividerLine" Property="Background" Value="#D32F2F"/>
                                                                </MultiDataTrigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Êìç‰ΩúË™¨Êòé -->
        <Border Grid.Row="3" Background="#FFFDE7" CornerRadius="4" Padding="10" Margin="0,10,0,0">
            <TextBlock TextWrapping="Wrap" FontSize="{DynamicResource SmallFontSize}">
                <Run FontWeight="Bold">Êìç‰ΩúÊñπÊ≥ï:</Run>
                <Run Text=" Ë°å„Å®Ë°å„ÅÆÈñì„Çí„ÇØ„É™„ÉÉ„ÇØ„Åó„Å¶ÂàÜÂâ≤Á∑ö„ÇíÊåøÂÖ•/ÂâäÈô§„Åß„Åç„Åæ„Åô„ÄÇ"/>
                <LineBreak/>
                <Run Text="Â§™„ÅÑÁ∑ö„ÅßÂå∫Âàá„Çâ„Çå„Å¶„ÅÑ„Å™„ÅÑÈÄ£Á∂ö„Åó„ÅüË°å„ÅØ„ÄÅ1„Å§„ÅÆ‰πó„ÇäÁ∂ô„Åé„Å®„Åó„Å¶ÊëòË¶Å„Å´„Åæ„Å®„ÇÅ„Çâ„Çå„Åæ„Åô„ÄÇ"/>
            </TextBlock>
        </Border>

        <!-- „Éï„ÉÉ„Çø„Éº -->
