<Window x:Class="ICCardManager.Views.Dialogs.DepartmentSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="部署の選択"
        Height="340"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AutomationProperties.Name="部署選択ダイアログ"
        AutomationProperties.HelpText="使用する部署を選択してください">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <TextBlock Grid.Row="0"
                   Text="部署及び支出科目を選択してください。"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- ラジオボタン -->
        <StackPanel Grid.Row="1" Margin="10,0,0,10">
            <RadioButton x:Name="MayorOfficeRadio"
                         Content="市長事務部局：役務費"
                         IsChecked="True"
                         FontSize="14"
                         Margin="0,0,0,10"
                         AutomationProperties.Name="市長事務部局を選択"/>
            <RadioButton x:Name="EnterpriseAccountRadio"
                         Content="企業会計部局（水道局、交通局等）：旅費 - 乗車券購入費"
                         FontSize="14"
                         Margin="0,0,0,10"
                         AutomationProperties.Name="企業会計部局を選択"/>
        </StackPanel>

        <!-- 注意書き -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="※ 本アプリは、現時点では、借損料（駐車場代）や自動車借上料（タクシー料金）には対応していません。"
                       TextWrapping="Wrap"
                       Foreground="Gray"
                       FontSize="12"/>
            <TextBlock Text="※ この設定は後から「設定」画面で変更できます。"
                       TextWrapping="Wrap"
                       Foreground="Gray"
                       FontSize="12"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="OK"
                    Click="OkButton_Click"
                    Padding="30,10"
                    MinWidth="100"
                    Background="#2196F3"
                    Foreground="White"
                    IsDefault="True"
                    AutomationProperties.Name="選択を確定"
                    ToolTip="選択した部署で設定します"/>
        </StackPanel>
    </Grid>
</Window>
