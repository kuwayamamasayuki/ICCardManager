<Window x:Class="ICCardManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="交通系ICカード管理システム"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <TextBlock Text="交通系ICカード管理システム"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- メインコンテンツ -->
        <Border Grid.Row="1" Padding="40">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="職員証をタッチしてください"
                           FontSize="32"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="ICカードリーダーに職員証をかざしてください"
                           FontSize="16"
                           Foreground="Gray"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="準備完了"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
